const int ledPin = 13; // LED pini

void setup() 
{
  pinMode(ledPin, OUTPUT); // LED pinini çıkış olarak ayarlandı
}

void loop() 
{
  digitalWrite(ledPin, HIGH); // LED'i yak
  delay(500); // 1000 milisaniye (1 saniye) bekle

  digitalWrite(ledPin, LOW); // LED'i söndür
  delay(500); // 1000 milisaniye (1 saniye) bekle
}